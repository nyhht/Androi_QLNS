<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#CCE8FF"
    tools:context=".ui.WorkScheduleActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#6797F4"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <ImageView
            android:id="@+id/btn_back_schedule"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Quay láº¡i"
            app:tint="@android:color/white" />

        <TextView
            android:id="@+id/tv_current_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="09:45 AM"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center" />

        <Space
            android:layout_width="24dp"
            android:layout_height="24dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp">

        <Button
            android:id="@+id/btn_check_in"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Check In"
            android:textColor="@android:color/white"
            android:backgroundTint="#0000FF"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btn_check_out"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Check Out"
            android:textColor="@android:color/black"
            android:backgroundTint="@android:color/white"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Work Schedule"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginBottom="16dp">

        <TextView android:id="@+id/tv_day_M" style="@style/DayOfWeekTextStyle" android:text="M" />
        <TextView android:id="@+id/tv_day_T" style="@style/DayOfWeekTextStyle" android:text="T" />
        <TextView android:id="@+id/tv_day_W" style="@style/DayOfWeekTextStyle" android:text="W" />
        <TextView android:id="@+id/tv_day_Th" style="@style/DayOfWeekTextStyle" android:text="T" />
        <TextView android:id="@+id/tv_day_F" style="@style/DayOfWeekTextStyle" android:text="F" />
        <TextView android:id="@+id/tv_day_S" style="@style/DayOfWeekTextStyle" android:text="S" />
        <TextView android:id="@+id/tv_day_Su" style="@style/DayOfWeekTextStyle" android:text="S" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">
        <LinearLayout
            android:id="@+id/schedule_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

</LinearLayout>