<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_light"
            android:padding="16dp">

            <!-- Back Icon -->
            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="12dp"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="@string/back_description"
                android:background="?android:selectableItemBackgroundBorderless"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Title -->
            <TextView
                android:id="@+id/tvDepartmentTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/department_title"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/imgBack"
                app:layout_constraintBottom_toBottomOf="@id/imgBack" />

            <!-- Tên phòng ban -->
            <TextView
                android:id="@+id/tvLabelDepartmentName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_department_name"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                app:layout_constraintTop_toBottomOf="@id/imgBack"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/edtDepartmentName"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:hint="@string/hint_department_name"
                android:inputType="text"
                android:importantForAutofill="yes"
                android:background="@drawable/edittext_background"
                android:autofillHints="name"
                android:padding="12dp"
                app:layout_constraintTop_toBottomOf="@id/tvLabelDepartmentName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp" />

            <!-- Mô tả -->
            <TextView
                android:id="@+id/tvLabelDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_description"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                app:layout_constraintTop_toBottomOf="@id/edtDepartmentName"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/edtDescription"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:hint="@string/hint_description"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:importantForAutofill="yes"
                android:autofillHints="name"
                android:background="@drawable/edittext_background"
                android:padding="12dp"
                app:layout_constraintTop_toBottomOf="@id/tvLabelDescription"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp" />

            <!-- Trưởng phòng -->
            <TextView
                android:id="@+id/tvLabelManager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_manager"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                app:layout_constraintTop_toBottomOf="@id/edtDescription"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/edtManager"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:hint="@string/hint_manager"
                android:inputType="textPersonName"
                android:importantForAutofill="yes"
                android:autofillHints="name"
                android:background="@drawable/edittext_background"
                android:padding="12dp"
                app:layout_constraintTop_toBottomOf="@id/tvLabelManager"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp" />

            <!-- Số lượng nhân viên -->
            <TextView
                android:id="@+id/tvLabelCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_employee_count"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                app:layout_constraintTop_toBottomOf="@id/edtManager"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/edtEmployeeCount"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:hint="@string/hint_employee_count"
                android:inputType="number"
                android:importantForAutofill="yes"
                android:autofillHints="phoneNumber"
                android:background="@drawable/edittext_background"
                android:padding="12dp"
                app:layout_constraintTop_toBottomOf="@id/tvLabelCount"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp" />

            <!-- Buttons -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/edtEmployeeCount"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="@string/cancel"
                    android:backgroundTint="@android:color/darker_gray"
                    android:background="?android:selectableItemBackground"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/btnSave"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="@string/save"
                    android:layout_marginStart="8dp"
                    android:backgroundTint="@android:color/holo_red_light"
                    android:background="?android:selectableItemBackground"
                    android:textColor="@android:color/white" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.cardview.widget.CardView>
