<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="vn.edu.tlu.cse.ht3.nguyenyenhieu.androi_qlns">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Androi_QLNS"
        tools:targetApi="31">

        <!-- Màn hình đăng nhập -->
        <activity
            android:name=".activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Danh sách Activity có thật -->
        <activity android:name=".activities.AdminActivity" />
        <activity android:name=".activities.EmployeeActivity" />
        <activity android:name=".activities.EmployeeListActivity" />
        <activity android:name=".activities.EmployeeDetailActivity" />
        <activity android:name=".activities.AddUpdateEmployeeActivity" />
        <activity android:name=".activities.DepartmentListActivity" />
        <activity android:name=".activities.DepartmentDetailActivity" />
        <activity android:name=".activities.AddUpdateDepartmentActivity" />
        <activity android:name=".activities.LeaveRequestActivity" />
        <activity android:name=".activities.LeaveDetailActivity" />
        <activity android:name=".activities.LeaveRequestFormActivity" />
        <activity android:name=".activities.SalaryActivity" />
        <activity android:name=".activities.StatisticsActivity" />
        <activity android:name=".activities.TimekeepingActivity" />

    </application>

</manifest>
